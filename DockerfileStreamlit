FROM python:3.10-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --default-timeout=1000 --no-cache-dir -r requirements.txt

COPY src/ src/
COPY models/ models/
COPY Data/ Data/

EXPOSE 8501

CMD ["streamlit", "run", "src/Dashboard/app.py", "--server.port=8501", "--server.address=0.0.0.0"]